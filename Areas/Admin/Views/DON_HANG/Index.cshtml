@model IEnumerable<LEVINHHUY_K22CNT1_2210900106_PROJECT2.Models.DON_HANG>

@{
    ViewBag.Title = "Thông tin đơn hàng";
}

<h2>Danh sách đơn hàng</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.MaDH)</th>
            <th>@Html.DisplayNameFor(model => model.Ten_Nguoi_Nhan)</th>
            <th>@Html.DisplayNameFor(model => model.Dia_Chi_Nhan)</th>
            <th>@Html.DisplayNameFor(model => model.Dien_Thoai_Nhan)</th>
            <th>@Html.DisplayNameFor(model => model.Ngay_dat)</th>
            <th>@Html.DisplayNameFor(model => model.Tong_tien)</th>
            <th>@Html.DisplayNameFor(model => model.Trang_thai)</th>
            <th>@Html.DisplayNameFor(model => model.KHACH_HANG.Ho_ten)</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.MaDH)</td>
                <td>@Html.DisplayFor(modelItem => item.Ten_Nguoi_Nhan)</td>
                <td>@Html.DisplayFor(modelItem => item.Dia_Chi_Nhan)</td>
                <td>@Html.DisplayFor(modelItem => item.Dien_Thoai_Nhan)</td>
                <td>@Html.DisplayFor(modelItem => item.Ngay_dat)</td>
                <td>@Html.DisplayFor(modelItem => item.Tong_tien)</td>
                <td>
                    @if (item.Trang_thai == 0)
                    {
                        <span class="text-danger">Chờ xử lý</span>
                    }
                    else if (item.Trang_thai == 1)
                    {
                        <span class="text-info">Đang xử lý</span>
                    }
                    else
                    {
                        <span class="text-success">Đã hoàn thành</span>
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.KHACH_HANG.Ho_ten)</td>
                <td>
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.ID }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.ID }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.ID }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
