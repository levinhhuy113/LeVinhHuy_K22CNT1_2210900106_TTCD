@model IEnumerable<LEVINHHUY_K22CNT1_2210900106_PROJECT2.Models.QUAN_TRI>

@{
    ViewBag.Title = "Quản Lý Tài Khoản Quản Trị";
}

<h2>Danh Sách Tài Khoản Quản Trị</h2>

<p>
    @Html.ActionLink("Thêm Mới", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenDangNhap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MatKhau)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoTen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenDangNhap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MatKhau)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <div class="btn-group" role="group">
                        @Html.ActionLink("Sửa", "Edit", new { id = item.MaQT }, new { @class = "btn btn-warning btn-sm" })
                        @Html.ActionLink("Xem", "Details", new { id = item.MaQT }, new { @class = "btn btn-info btn-sm" })
                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaQT }, new { @class = "btn btn-danger btn-sm" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
