@using LEVINHHUY_K22CNT1_2210900106_PROJECT2.Models

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ứng Dụng Bán Hàng Linh Kiện Máy Tính</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-whatever-integrity-hash" crossorigin="anonymous">
    <link href="~/Content/Style.css" rel="stylesheet" type="text/css" />

    <!-- Custom CSS -->
    <style>
        /* Tùy chỉnh navbar nâng cao */
        .navbar {
            background: linear-gradient(135deg, #1a1a2e, #16213e); /* Hiệu ứng gradient */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Đổ bóng */
            padding: 10px 0; /* Padding để làm navbar không bị chật */
        }

            .navbar .navbar-brand {
                color: #ffffff;
                font-weight: bold;
                font-size: 1.8rem; /* Tăng kích thước chữ của tên cửa hàng */
                padding-left: 15px;
                text-transform: uppercase; /* Chữ in hoa để nổi bật hơn */
            }

            .navbar .nav-link {
                color: #f0f0f0;
                font-size: 1.2rem; /* Tăng kích thước chữ của các liên kết */
                margin-right: 25px; /* Tăng khoảng cách giữa các mục */
                padding: 10px 15px; /* Tăng padding cho mục */
                transition: color 0.3s, background-color 0.3s, padding 0.3s;
            }

                .navbar .nav-link:hover {
                    color: #ffffff; /* Đổi màu chữ khi hover */
                    background-color: #ff9f1c; /* Màu nền khi hover */
                    border-radius: 5px; /* Bo góc để mềm mại */
                    padding: 12px 20px; /* Tăng padding khi hover để tạo hiệu ứng nổi bật */
                }

        /* Đảm bảo khoảng cách giữa các item trong navbar */
        .navbar-nav .nav-item {
            padding-left: 15px;
            padding-right: 15px;
        }

        /* Tùy chỉnh cho phần người dùng (Xin chào và Đăng Xuất/Đăng Nhập) */
        .navbar-nav .user-greeting {
            color: #ffffff;
            margin-right: 10px;
            font-style: italic;
            font-size: 1.1rem; /* Tăng kích thước chữ */
        }

        /* Tùy chỉnh footer */
        footer {
            background-color: #f8f9fa;
            padding: 20px 0;
            text-align: center;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">Cửa Hàng Linh Kiện</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Sản Phẩm", "Index", "SAN_PHAM", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Giỏ hàng", "Index", "Cart", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Đơn hàng", "Index", "OrderHistory", null, new { @class = "nav-link" })
                    </li>
                </ul>

                <ul class="navbar-nav">
                    @if (Session["KhachHang"] != null)
                    {
                        var khachHang = (KHACH_HANG)Session["KhachHang"];
                        <li class="nav-item user-greeting">
                            <span>Xin chào, @khachHang.Ho_ten!</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Logout", "KHACH_HANG")">Đăng Xuất</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "KHACH_HANG")">Đăng Nhập</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container body-content mt-4">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - <a href="#">Ứng Dụng Bán Hàng Linh Kiện Máy Tính</a>. All rights reserved.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-whatever-integrity-hash" crossorigin="anonymous"></script>
</body>
</html>
